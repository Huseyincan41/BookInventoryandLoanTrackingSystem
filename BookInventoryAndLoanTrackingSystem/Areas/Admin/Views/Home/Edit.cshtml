@model Entity.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Home" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <input type="hidden" asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Kitap Adı</label>
                <input asp-for="BookName" class="form-control" />
                <span asp-validation-for="BookName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Yazar Adı</label>
                <input asp-for="Writer" class="form-control" />
                <span asp-validation-for="Writer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Yazım Yılı</label>
                <input asp-for="YearOfPublication" class="form-control" />
                <span asp-validation-for="YearOfPublication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Mevcut Kitap Görseli</label><br />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Kitap Görseli" width="120" height="160" style="object-fit:cover; border:1px solid #ccc;" />
                }
                else
                {
                    <p>Görsel yok.</p>
                }
            </div>
            <div class="form-group">
                <label>Yeni Kitap Görseli Ekle</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>
            @* <div class="form-group">
                <label asp-for="BookTypeName" class="control-label"></label>
                <input asp-for="BookTypeName" class="form-control" />
                <span asp-validation-for="BookTypeName" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label>Stok Sayısı</label>
                <input asp-for="StockCount" class="form-control" />
                <span asp-validation-for="StockCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input type="hidden" asp-for="BookTypesId" class="form-control" />
                <span asp-validation-for="BookTypesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

