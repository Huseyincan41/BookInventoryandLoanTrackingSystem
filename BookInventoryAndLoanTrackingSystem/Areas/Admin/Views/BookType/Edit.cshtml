@model Entity.Entities.BookTypes

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="BookType" method="post">
            <input type="hidden" asp-for="Id" class="form-control" />
            <div class="form-group">
                <label>Tür Adı</label>
                <input asp-for="Name" class="form-control" />
